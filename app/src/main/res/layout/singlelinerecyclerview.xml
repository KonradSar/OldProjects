<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleLineLay"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp">
    <!--<me.fahmisdk6.avatarview.AvatarView-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--app:avCornerRadius="7dp"-->
        <!--android:id="@+id/avatar"-->
        <!--/>-->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        
        android:id="@+id/avatarr"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/repositorySource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="GitHub/BitBucket"
            android:textStyle="bold"/>
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_below="@+id/repositorySource"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
</LinearLayout>